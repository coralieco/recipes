
<h1>Happy <%= Date.today.strftime("%A")%> !</h1>
<p>Some ideas for cooking tonight</p>

<% @recipes.each do |recipe| %>
<ul>
  <li class="list-index-recipes">
    <h3><%= link_to recipe.name, recipe.link, target: "_blank" %></h3>
    <%= image_tag "http://#{recipe.picture}", class: "recipe_image" %> <br>
    <%#= image_tag 'http://power.itp.ac.cn/~jmyang/funny/fun4.jpg', class: "recipe_image" %> <br>
    <% unless recipe.difficulty.blank? %>
      <i class="fas fa-eye"></i> Difficulty: <%= recipe.difficulty %> <br>
    <% end %>
    <% unless recipe.difficulty.blank? %>
      <i class="far fa-clock"></i> Time: <%= recipe.time unless recipe.time.nil?  %><br>
    <% end %>
    <br>
    <div class="actions">
      <% if recipe.day_bookmark == true %>
        <i class="fas fa-bookmark"></i> Bookmarked!
        <br>
        <i class="fas fa-times"></i><%= link_to "Unmark!", recipe_unbookmark_path(recipe) %>
      <% else %>
      <i class="far fa-bookmark"></i> <%= link_to "Bookmark for today!", recipe_bookmark_path(recipe) %>
      <br>
      <br>
      <i class="fas fa-sync-alt"> </i> <%= link_to 'Next idea!', root_url %>
      <% end %>
    </div>
  </li>
</ul>
<% end %>

<%= link_to "See all my recipes", list_bookmarked_recipes_recipes_path %>
